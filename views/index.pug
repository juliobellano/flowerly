                margin-right: 7px;
            }

            @keyframes float {
                0% {
                    box-shadow: 0 5px 15px 0px rgba(0, 0, 0, 0.6);
                    transform: translatey(0px);
                }
                50% {
                    box-shadow: 0 25px 15px 0px rgba(0, 0, 0, 0.2);
                    transform: translatey(-4px);
                }
                100% {
                    box-shadow: 0 5px 15px 0px rgba(0, 0, 0, 0.6);
                    transform: translatey(0px);
                }
            }

           .avatar {
                display: inline;
                transform: translateX(5px);
                width: 65px;
                height: 65px;
                box-sizing: border-box;
                border: 5px white solid;
