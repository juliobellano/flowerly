        style.
            h1 {
                font-family: 'Helvetica Neue', 'Helvetica', sans-serif;
                font-weight: bold;
                margin: 0; 
                display: flex; 
                justify-content: center; 
                align-items: center; 
                position: absolute; 
                top: 50%; 
                left: 50%; 
                transform: translate(-50%, -50%);
                color: white;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
                transition: top 0.7s; 
                z-index: 1; 
            }

            .sticky{
                position: fixed;
                top: 0;
                left: 50%;
                transform: translateX(-50%);
                margin-top: 50px;
            
        
            }


            #starfield {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 0;
                overflow: hidden;
            }

            canvas {
                /* Make the canvas fixed to cover the whole window*/
                position: fixed; 
                top: 0;
                left: 0;
                width: 100vw; 
                height: 100vh; 
                z-index: -1; 
                /* Remove any extra space below the canvas */
                display: block; 
            }

            
